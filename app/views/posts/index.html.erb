<%= stylesheet_link_tag 'blogForm.css' %>

<% if user_signed_in? %>
    <div class="blogForm">
        <%= form_with(model: @post, local: true) do |form| %>
            <%= form.label :title %>
            <%= form.text_field :title %>

            <%= form.label :content %>
            <%= form.rich_text_area :content %>

            <%= form.submit %>
        <% end %>
    </div>
<% end %>


<div class="blogForm">
    <% @posts.each do |post| %>
        <h2>
            <%= link_to post.title, post %>
        </h2>
    <% end %>
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
